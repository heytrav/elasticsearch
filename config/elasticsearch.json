{
  "cluster": {
    "name": "elasticsearch-k8s"
  },
  "node":{
    "master": false,
    "data": false
  },
  "cloud": {
    "k8s": {
      "selector": "component=elasticsearch"
    }
  },
    "path":{
        "logs": "/data/log",
        "data":"/data/data",
        "plugins":"/data/plugins",
        "work":"/data/work"
    },
  "bootstrap": {
    "mlockall": true
  },
  "http": {
    "enabled": true
  },
  "discovery": {
    "type": "io.fabric8.elasticsearch.discovery.k8s.K8sDiscoveryModule",
    "zen":{
      "ping": {
        "multicast": {
          "enabled": false
        }
      }
    }
  }
}
